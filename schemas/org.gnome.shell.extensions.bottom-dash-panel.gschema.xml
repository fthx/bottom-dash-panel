<?xml version="1.0" encoding="UTF-8"?>

<schemalist>

    <schema path="/org/gnome/shell/extensions/bottom-dash-panel/" id="org.gnome.shell.extensions.bottom-dash-panel">

        <key type="b" name="multi-monitor">
            <default>true</default>
            <summary>Bottom panel on all monitors</summary>
        </key>

        <key type="b" name="toggle-panel">
            <default>true</default>
            <summary>Bottom pressure to toggle bottom panel</summary>
        </key>

        <key type="b" name="overlap-windows">
            <default>true</default>
            <summary>Bottom panel overlaps windows</summary>
        </key>

        <key type="b" name="auto-hide">
            <default>true</default>
            <summary>Auto hide bottom panel</summary>
        </key>

        <key type="b" name="hide-top-panel">
            <default>false</default>
            <summary>Hide top panel</summary>
        </key>

        <key type="b" name="no-overview">
            <default>true</default>
            <summary>No overview at start-up</summary>
        </key>

        <key type="b" name="panel-mode">
            <default>true</default>
            <summary>Full-width dash</summary>
        </key>

        <key type="d" name="dash-height">
            <default>4.4</default>
            <range min="1" max="15"/>
            <summary>Dash max height (%)</summary>
        </key>

        <key type="i" name="dash-background-opacity">
            <default>90</default>
            <range min="0" max="100"/>
            <summary>Dash background opacity (%)</summary>
        </key>

        <key type="b" name="accent-color">
            <default>false</default>
            <summary>Dash background uses accent color</summary>
        </key>

        <key type="i" name="animation-time">
            <default>150</default>
            <range min="0" max="500"/>
            <summary>Dash hide/show animation time (ms)</summary>
        </key>

        <key type="i" name="bottom-pressure">
            <default>150</default>
            <range min="0" max="500"/>
            <summary>Bottom edge pressure (px)</summary>
        </key>

    </schema>

</schemalist>
